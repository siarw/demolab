{
  "name": "nlphilab",
  "version": "1.0.0",
  "main": "tailwind.config.js",
  "scripts": {
    "build:dev": "npx tailwindcss -i ./src/styles.css -o ./dist/output.css",
    "build:prod": "NODE_ENV=production npx tailwindcss -i ./src/styles.css -o ./dist/output.css --minify",
    "deploy": "npm run build:prod && git checkout gh-pages && cp -R dist/* . && git add . && git commit -m 'Deploy new version' && git push origin gh-pages && git checkout main",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
